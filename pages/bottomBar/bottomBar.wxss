/* pages/bottomBar/bottomBar.wxss */

.bottom-box{
position: fixed;
bottom: 0;
left: 0;
height:100rpx;
border-radius: 15rpx 15rpx  0 0 ;
width: 100%;
background: #F95A5F;
color: #fff;
}
.bottom-item{
padding: 5rpx;
height: 100rpx;

text-align: left;
}
.bottom-item view{
    height: 100rpx;
    line-height: 100rpx;
}
.bottom-float-button{
    height:100rpx;
    width: 100rpx;
    background: #F95A5F;
    border-radius:70rpx;
    margin-left: 325rpx;
    
    border: 5px solid #fff;
    margin-top: -60rpx;

}
.bottom-float-button view{
   width: 100%;
   text-align: center;
   vertical-align: middle;
   line-height:100rpx;
   
}
.bottom-float-button-hover{
     background: rgb(216, 80, 85);
     box-shadow: 1px 1px 1px 2px rgba(231, 231, 231, 0.164)
}